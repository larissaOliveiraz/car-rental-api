{
   "compilerOptions": {
      "target": "es2016",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "commonjs",
      "types": ["@types/jest"],
      "baseUrl": "./",
      "paths": {
         "@/*": ["./src/*"]
      },
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
   }
}
